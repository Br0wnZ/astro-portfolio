---
import EyeIcon from "@/assets/icons/eye.astro"
import GithubIcon from "@/assets/icons/github.astro"
import { links, projects } from "@/data.json"
import { Image } from "astro:assets"
---

<section id="portfolio" class="hidden-section">
  <div class="mx-auto">
    <h2 class="mb-8 font-paint text-xl text-center">PROJECTS</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mx-4 sm:mx-16">
      {
        projects.map((project) => (
          <div>
            <div class="project hover:animate-pop relative rounded overflow-hidden shadow-md">
              <Image
                class="aspect-square object-cover block h-auto"
                src={project.imageSrc}
                alt={project.altText}
                width={700}
                height={700}
                loading="lazy"
              />
              <div class="details w-full content-center h-full text-white absolute top-0 left-0 z-10 transition-all duration-300 ease-in-out">
                <div class="absolute w-full bottom-28 md:top-16 lg:top-28">
                  <p class="text-center px-4 text-xl">{project.description}</p>
                  <div class="links_project w-[20%] mx-auto text-2xl flex justify-center items-center">
                    {project.codeSrc && (
                      <a
                        class="no-underline"
                        href={project.codeSrc}
                        target="_blank"
                        rel="noopener noreferrer"
                        title="source code"
                        aria-label="source code"
                      >
                        <GithubIcon stroke="white" />
                      </a>
                    )}

                    {project.liveDemoURL && (
                      <a
                        class="no-underline"
                        href={project.liveDemoURL}
                        target="_blank"
                        rel="noopener noreferrer"
                        title="See"
                        aria-label="live demo"
                      >
                        <EyeIcon stroke="white" />
                      </a>
                    )}
                  </div>
                </div>
                <div class="technology absolute bottom-3 w-full mx-auto backdrop-blur-sm">
                  <div class="flex flex-wrap justify-center gap-8">
                    {project.technologies.map((tech) => (
                      <div class="flex flex-col justify-center text-white">
                        <img
                          class="max-w-8 block text-white"
                          src={`/img/stack-icons/${tech}.svg`}
                          alt={tech}
                          title={tech.charAt(0).toUpperCase() + tech.slice(1)}
                        />
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    <p class="text-center mt-8">
      <button
        type="button"
        class="text-white bg-[#24292F] hover:bg-[#24292F]/90 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-gray-500 dark:hover:bg-[#050708]/30 me-2 mb-2"
      >
        <svg
          class="w-4 h-4 me-2"
          aria-hidden="true"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z"
            clip-rule="evenodd"></path>
        </svg>
        <a href={links.github} target="_blank" aria-label="github"> See more </a>
      </button>
    </p>
  </div>
</section>

<style lang="scss">
  #portfolio {
    .project {
      &:hover {
        .details {
          clip-path: circle(141.1% at 0 0);
        }
      }

      .details {
        background-color: rgba(#000000, 0.4);
        clip-path: circle(0% at 0 0);
      }
    }
  }
</style>
