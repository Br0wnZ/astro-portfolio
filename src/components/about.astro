---
import { description, skills } from "@/data.json"
---

<div id="about">
  <div class="max-w-[1320px] mx-auto sm:px-4">
    <div class="flex flex-wrap">
      <div class="w-full md:w-full lg:w-1/2 pr-4 pl-4">
        <section
          id="about_section"
          class=""
          data-aos="fade-right"
          data-aos-mirror="true"
          data-aos-duration="1500"
        >
          <h2 class="mb-8 font-paint text-xl text-center">ABOUT ME</h2>
          {description.map((desc) => <p class="mb-8">{desc}</p>)}
        </section>
      </div>

      <div class="flex flex-wrap w-full lg:w-1/2 pr-4 pl-4">
        <section
          id="skills_section"
          class="flex flex-wrap w-full my-5 xl:mb-0"
          data-aos="fade-left"
          data-aos-duration="1000"
        >
          <h2 class="font-paint italic text-center text-xl w-full">SKILLS</h2>
          <div class="flex flex-wrap items-center">
            {
              skills.map((skill) => (
                <div class="w-1/3 xs:w-1/2 md:w-1/3 p-2">
                  <picture>
                    <img
                      class="pb-2 h-8 md:h-10 xl:h-12 hover:scale-110 transition duration-300 ease-in-out"
                      loading="lazy"
                      src={`/img/stack-icons/${skill}.svg`}
                      alt={skill.toUpperCase()}
                    />
                  </picture>
                  <span class="font-medium italic">{skill.toUpperCase()}</span>
                </div>
              ))
            }
          </div>
        </section>
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  #about {
    #skills_section {
      text-align: -webkit-center;
    }
  }
</style>
